<div class="card">
    <div class="card-content">
        @if (!string.IsNullOrWhiteSpace(Title))
        {
            <h5 class="card-title">@Title</h5>
        }
        @ChildContent
    </div>
</div>

@code {
    [Parameter] 
    [EditorRequired]
    public RenderFragment ChildContent { get; set; }

    [Parameter] 
    public string? Title { get; set; }
}
